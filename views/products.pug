doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Homepage
        style.
            body 

    body 
        h1 Welcome Product Page 
        p number of products on sale #{products.length}

        ol 
            each product in products
                li  
                    a(href=`/products/${product.id}`) #{product.name} price #{product.price}
